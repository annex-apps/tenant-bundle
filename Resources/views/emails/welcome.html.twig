{# app/Resources/views/emails/welcome.html.twig #}
{% extends 'AnnexTenantBundle::emails/template.html.twig' %}

{% block title %}Welcome to Annex Apps{% endblock %}

{% block heading %}Welcome to Annex Apps!{% endblock %}

{% block content %}

    We've created an account for you on our <strong>{{ app_name|capitalize }}</strong> app;
    <br>
    <br>
    <table cellpadding="10" cellspacing="0">
        <tr>
            <td>Login URL:</td>
            <td><a href="https://www.{{ app_tld }}/login?accountCode={{ tenant.stub }}">https://www.{{ app_tld }}/login?accountCode={{ tenant.stub }}</a></td>
        </tr>
        <tr>
            <td>Email address:</td>
            <td>{{ email }}</td>
        </tr>
        <tr>
            <td>Password:</td>
            <td>{{ password }}</td>
        </tr>
    </table>

{% endblock %}