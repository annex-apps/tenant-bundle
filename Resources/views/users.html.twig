{% extends 'AnnexTenantBundle::base.html.twig' %}

{% block heading %}Users{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-md-12">
            <table id="tbl-users" class="table table-hover table-striped">
                <thead>
                    <th>First name</th>
                    <th>Last name</th>
                    <th>Email</th>
                    <th></th>
                </thead>
                {% for user in users %}
                    {% if user.id > 1 %}
                    <tr>
                        <td>{{ user.firstName }}</td>
                        <td>{{ user.lastName }}</td>
                        <td>{{ user.email }}</td>
                        <td>
                            {% if user.id == app.user.id %}
                                <a href="{{ path('fos_user_profile_show') }}">My profile</a>
                            {% endif %}
                        </td>
                    </tr>
                    {% endif %}
                {% endfor %}
            </table>
        </div>
    </div>

{% endblock %}

{% block stylesheets %}

{% endblock %}
